{
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "rules": {
    "no-cond-assign": 0,
    "no-console": 0,
    "no-extra-parens": 2,

    "block-scoped-var": 2,
    "eqeqeq": [2, "smart"],
    "no-else-return": 0,
    "no-floating-decimal": 2,
    "wrap-iife": [2, "inside"],
    "no-use-before-define": 1,

    "camelcase": 2,
    "new-cap": 0,
    "no-lonely-if": 2,
    "keyword-spacing": 2,
    "space-in-brackets": 0,
    "space-infix-ops": 2,
    "valid-jsdoc": 2,

    "semi": ["error", "always"],

    "strict": [2, "never"],
    "indent": ["error", "tab"],
    "quotes": [2, "single"],

    "indentSwitchCase": true
  }
}